{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "lib": ["es6", "dom", "es2018"],
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "build",
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
